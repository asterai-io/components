  /// Searches the web and returns results as a JSON array.
  /// Each result contains url, title, and description fields.
  /// Requires the FIRECRAWL_KEY environment variable.
  search: func(query: string, limit: u32) -> string;
}

world component {
  import asterai:host/api@1.0.0;

  export firecrawl;
